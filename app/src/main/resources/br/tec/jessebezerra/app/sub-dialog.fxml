<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.tec.jessebezerra.app.controller.SubDialogController"
      stylesheets="@styles/sprint-styles.css"
      spacing="20" styleClass="content-section">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label fx:id="historiaTitleLabel" styleClass="header-title"/>
    
    <GridPane hgap="15" vgap="15" styleClass="form-grid">
        <columnConstraints>
            <ColumnConstraints percentWidth="25" minWidth="100"/>
            <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
            <ColumnConstraints percentWidth="25" minWidth="100"/>
            <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
        </columnConstraints>
        
        <Label text="Título SUB:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
        <TextField fx:id="tituloField" promptText="Digite o título da SUB" 
                  GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3" 
                  styleClass="form-field"/>
        
        <Label text="Duração (dias):" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
        <Spinner fx:id="duracaoSpinner" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                styleClass="form-field" maxWidth="Infinity" editable="true"/>
        
        <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="form-label"/>
        <ComboBox fx:id="statusComboBox" promptText="Selecione o status" 
                 GridPane.columnIndex="3" GridPane.rowIndex="1" styleClass="form-field"
                 maxWidth="Infinity"/>
        
        <Label text="Membro:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
        <ComboBox fx:id="membroComboBox" promptText="Selecione o membro (opcional)" 
                 GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-field"
                 maxWidth="Infinity"/>
        
        <Label text="Descrição:" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="form-label"/>
        <TextArea fx:id="descricaoTextArea" promptText="Digite a descrição da SUB" 
                 GridPane.columnIndex="3" GridPane.rowIndex="2" 
                 styleClass="form-field" prefRowCount="2" wrapText="true"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="button-bar">
        <Button fx:id="salvarButton" text="Salvar SUB" onAction="#onSalvarClick" styleClass="btn-primary"/>
        <Button text="Limpar" onAction="#onLimparClick" styleClass="btn-secondary"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="editarButton" text="Editar" onAction="#onEditarClick" styleClass="btn-warning" disable="true"/>
        <Button fx:id="excluirButton" text="Excluir" onAction="#onExcluirClick" styleClass="btn-danger" disable="true"/>
    </HBox>
    
    <VBox VBox.vgrow="ALWAYS" styleClass="table-container">
        <Label text="SUBs Cadastradas" styleClass="section-title"/>
        <TableView fx:id="subTable" VBox.vgrow="ALWAYS" styleClass="sprint-table">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" styleClass="table-column"/>
                <TableColumn fx:id="tituloColumn" text="Título" prefWidth="300" styleClass="table-column"/>
                <TableColumn fx:id="duracaoColumn" text="Dias" prefWidth="80" styleClass="table-column"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="120" styleClass="table-column"/>
                <TableColumn fx:id="membroColumn" text="Membro" prefWidth="150" styleClass="table-column"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Fechar" onAction="#onFecharClick" styleClass="btn-secondary"/>
    </HBox>
</VBox>
